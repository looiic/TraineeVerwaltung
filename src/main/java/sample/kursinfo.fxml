<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <HBox>
            <children>
                <Label prefHeight="17.0" prefWidth="100.0" text="Kursinformation:">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <TextField fx:id="kursField" text=""/>
                <TextField fx:id="kursId" editable="false" opacity="0.0"/>
            </children>
        </HBox>
        <HBox layoutY="25.0">
            <children>
                <Label prefHeight="25.0" prefWidth="100.0" text="Raum:"/>
                <TextField fx:id="raumField"/>
            </children>
        </HBox>
        <HBox layoutY="50.0">
            <children>
                <Label text="Anzahl Teilnehmer:"/>
                <TextField fx:id="anzahlTN" editable="false"/>
            </children>
        </HBox>
    </children>

</AnchorPane>
